{
    "name": "Solar Flare",
    "description": "From intense magnetic fields on the Sun becoming too tangled, you have gained the ability to launch your own solar flare",
    "badges": [
        {
            "type": "origins:keybind",
            "text": "Activate with Secondary Active",
            "sprite": "origins:textures/gui/badge/active.png"
        }
    ],
    "type": "origins:active_self",
    "entity_action": {
        "type": "origins:and",
        "actions": [
            {
                "type": "origins:apply_effect",
                "effect": {
                    "effect": "minecraft:slowness",
                    "duration": 30,
                    "amplifier": 2,
                    "show_particles": true,
                    "show_icon": true
                }
            },
            {
                "type": "origins:execute_command",
                "command": "playsound minecraft:entity.warden.sonic_charge player @a[distance=..20] ~ ~ ~ 10 1"
            },
            {
                "type": "origins:delay",
                "action": {
                    "type": "origins:raycast",
                    "distance": 25,
                    "block": false,
                    "entity": true,
                    "shape_type": "visual",
                    "fluid_handling": "none",
                    "bientity_action": {
                        "type": "origins:target_action",
                        "action": {
                            "type": "origins:and",
                            "actions": [
                                {
                                    "type": "origins:damage",
                                    "amount": 10,
                                    "source": {
                                        "name": " explosion",
                                        "bypasses_armor": true,
                                        "unblockable": true
                                    }
                                },
                                {
                                    "type": "origins:apply_effect",
                                    "effect": {
                                        "effect": "night_vision",
                                        "duration": 100,
                                        "amplifier": 0,
                                        "show_particles": true,
                                        "show_icon": true
                                    }
                                }
                            ]
                        }
                    },
                    "command_along_ray": "function astral:flare"
                }
            }
        ]
    },
    "cooldown": 160,
    "hud_render": {
        "should_render": true,
        "sprite_location": "origins:textures/gui/resource_bar.png",
        "bar_index": 4
    },
    "key": {
        "key": "key.origins.secondary_active"
    }
}